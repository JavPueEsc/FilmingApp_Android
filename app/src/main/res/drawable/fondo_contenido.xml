<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <gradient
        android:angle="90"
        android:startColor="@color/azulApp"
        android:centerColor="@color/white"
        android:endColor="@color/white"
        android:type="linear" />

    <!-- Tramo azul mÃ¡s corto -->
    <item
        android:startColor="@color/azulApp"
        android:endColor="@color/azulApp"
        android:offset="1" /> <!-- Esto hace que el azul sea muy corto -->

    <!-- Blanco ocupa el resto -->
    <item
        android:startColor="@color/white"
        android:endColor="@color/white"
        android:offset="0" /> <!-- Blanco ocupa el resto del gradiente -->
</shape>
