<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo para el texto de opción de de la barra superior -->
    <style name="EstiloTituloBarraNavegacion" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">25sp</item>
    </style>

    <!-- Estilo para el texto de opción de de la barra superior -->
    <style name="EstiloTituloBarraNavegacionNombreApp" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/filmletters</item>
        <item name="android:textAlignment">center</item>

    </style>

    <!-- Estilo barra navegación -->
    <style name="EstiloBarraNavegacion" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">@color/azulApp</item>
        <item name="titleTextAppearance">@style/EstiloTituloBarraNavegacion</item>

    </style>

    <!-- Estilo título menu lateral-->
    <style name="TituloMenuLateral" parent="TextAppearance.AppCompat.Large">

        <item name="android:textColor">@color/azulApp</item>
        <item name="android:fontFamily">@font/filmletters</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">35sp</item>
    </style>

    <!--Estilo subtitulo menú lateral-->
        <style name="SubTituloMenuLateral"  parent="TextAppearance.AppCompat.Medium">
            <item name="android:textColor">@color/azulApp</item>
            <item name="android:textAlignment">center</item>
            <item name="android:textSize">16sp</item>
        </style>
    <!-- Estilo opciones menú lateral -->
    <style name="EstiloOpcionesMenuLateral" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/verdeApp</item>

    </style>

    <!-- Estilo opcion inicio -->
    <style name="opcionInicio">
        <item name="android:textColor">@color/verdeApp</item>
        <item name="itemIconTint">@color/verdeApp</item>
    </style>

    <!-- Estilo opcion pelicula -->
    <style name="opcionPeliculas">
        <item name="android:textColor">@color/rosaApp</item>
        <item name="itemIconTint">@color/rosaApp</item>
    </style>

    <!-- Estilo opcion Series -->
    <style name="opcionSeries">
        <item name="android:textColor">@color/amarilloApp</item>
        <item name="itemIconTint">@color/amarilloApp</item>
    </style>

    <!-- Estilo tarjetas -->
    <style name="tarjetas">
        <item name="android:background">@color/azulApp</item>
    </style>

    <!-- Estilo texto tarjetas Películas-->
    <style name="textoTarjetasPelicula">
        <item name="android:textColor">@color/rosaApp</item>
    </style>

    <!-- Estilo texto tarjetas Series-->
    <style name="textoTarjetasSerie">
        <item name="android:textColor">@color/amarilloApp</item>
    </style>

    <!-- Estilo texto detalles peliculas/series-->
    <style name="textoDetalles">
        <item name="android:textColor">@color/azulApp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textoDetalles.justificado">
        <item name="android:textColor">@color/azulApp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <!-- Estilo texto detalles labels peliculas/series-->
    <style name="textoDetalles.lbl">
        <item name="android:textColor">@color/azulApp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo texto detalles labels peliculas/series-->
    <style name="textoDetalles.lblCaratula">
        <item name="android:textColor">@color/azulApp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>